{
  "name": "node-express-typescript-template",
  "version": "1.0.0",
  "description": "A template for Node, Express, and Typescript",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node --env-file=.env dist/app.js",
    "dev": "tsx watch --env-file=.env src/app.ts",
    "lint": "eslint .",
    "format": "prettier --write .",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio --port 6969 --host 127.0.0.1"
  },
  "keywords": [
    "node",
    "express",
    "typescript"
  ],
  "author": "Jomark Pangan",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "drizzle-kit": "^0.20.7",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@lucia-auth/adapter-postgresql": "^2.0.2",
    "argon2": "^0.31.2",
    "date-fns": "^3.0.6",
    "drizzle-orm": "^0.29.1",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.2",
    "lucia": "^2.7.6",
    "nanoid": "^5.0.4",
    "pino": "^8.17.1",
    "pino-pretty": "^10.3.0",
    "postgres": "^3.4.3",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
